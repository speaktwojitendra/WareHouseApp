public void addMultipleData() {
	CUSTOMERDETAILS customerDetails1=new CUSTOMERDETAILS();
	customerDetails1.setAddress("Newzland");
	customerDetails1.setAge(27);
	
	customerDetails1.setName("mark");
	CUSTOMERDETAILS customerDetails2=new CUSTOMERDETAILS();
	customerDetails1.setAddress("USA");
	customerDetails1.setAge(27);
	
	customerDetails1.setName("Dalton");
	CUSTOMERDETAILS customerDetails3=new CUSTOMERDETAILS();
	customerDetails1.setAddress("France");
	customerDetails1.setAge(25);

	customerDetails1.setName("speed");
	
	List<CUSTOMERDETAILS>customerdetails=List.of(customerDetails1, customerDetails2, customerDetails3);
	customerRepository.saveAll(customerdetails);
	
}
}
